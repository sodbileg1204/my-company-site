---
import { getLangFromUrl, useTranslations, languages } from '../utils/i18n';

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const otherLang = lang === 'en' ? 'mn' : 'en';
const switchLangPath = lang === 'en' 
  ? `/mn${currentPath}` 
  : currentPath.replace('/mn', '');
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Company website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-zinc-950 text-zinc-100 min-h-screen">
    <nav class="border-b border-zinc-800 sticky top-0 bg-zinc-950/80 backdrop-blur-xl z-50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href={lang === 'en' ? '/' : '/mn'} class="text-2xl font-display font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
            Company
          </a>
          
          <div class="flex items-center gap-8">
            <div class="hidden md:flex items-center gap-6">
              <a href={lang === 'en' ? '/' : '/mn'} class="text-zinc-400 hover:text-zinc-100 transition-colors">
                {t('nav.home')}
              </a>
              <a href={lang === 'en' ? '/about' : '/mn/about'} class="text-zinc-400 hover:text-zinc-100 transition-colors">
                {t('nav.about')}
              </a>
              <a href={lang === 'en' ? '/services' : '/mn/services'} class="text-zinc-400 hover:text-zinc-100 transition-colors">
                {t('nav.services')}
              </a>
              <a href={lang === 'en' ? '/portfolio' : '/mn/portfolio'} class="text-zinc-400 hover:text-zinc-100 transition-colors">
                {t('nav.portfolio')}
              </a>
              <a href={lang === 'en' ? '/contact' : '/mn/contact'} class="text-zinc-400 hover:text-zinc-100 transition-colors">
                {t('nav.contact')}
              </a>
            </div>
            
            <a 
              href={switchLangPath} 
              class="px-3 py-1.5 rounded-md bg-zinc-800 hover:bg-zinc-700 transition-colors text-sm font-medium"
            >
              {languages[otherLang]}
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="border-t border-zinc-800 mt-24">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-zinc-500 text-sm">
            Â© {new Date().getFullYear()} Company. All rights reserved.
          </p>
          <div class="flex gap-6 text-sm text-zinc-500">
            <a href="#" class="hover:text-zinc-100 transition-colors">Privacy</a>
            <a href="#" class="hover:text-zinc-100 transition-colors">Terms</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
